<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/name_edit_text"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="name" />

                    <EditText
                        android:id="@+id/age_edit_text"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="age" />

                    <Button
                        android:id="@+id/register_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="register Customer" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/buyer_name_edit_text"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="customer name" />

                    <EditText
                        android:id="@+id/car_name_edit_text"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="car name" />

                    <CheckBox
                        android:id="@+id/is_luxary_check_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="luxary?" />

                    <Button
                        android:id="@+id/buy_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="buy car" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/buyer_name_search_edit_text"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="customer name" />

                <CheckBox
                    android:id="@+id/search_for_luxary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox"
                    tools:text="luxary" />

                <CheckBox
                    android:id="@+id/descending_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CheckBox"
                    tools:text="Descending" />

                <Button
                    android:id="@+id/search_customer_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" search customer" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/result_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>